<div class="container">
  <h2 class="title">登録情報編集</h2>
  <!-- エラーメッセージ表示-->
  <% if @customer.errors.any? %>
  <h3><%= @customer.errors.count %>error occurrence</h3><!--エラーメッセ-->
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
    <!-- エラーメッセージ表示-->
  <%= form_for(@customer) do |f| %>
  <div class="row">
    <div class="col"><%= f.label :氏名%></div>
    <div class="col"><%= f.text_field :last_name %></div>
    <div class="col"><%= f.text_field :first_name %></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :フリガナ %></div>
    <div class="col"><%= f.text_field :last_name_kana %></div>
    <div class="col"><%= f.text_field :first_name_kana %></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :郵便番号 %></div>
    <div class="col"><%= f.text_field :postal_number %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :住所 %></div>
    <div class="col"><%= f.text_field :address %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :電話番号 %></div>
    <div class="col"><%= f.text_field :phone_number %></div>
    <div class="col"></div>
  </div>

  <div class="row">
    <div class="col"><%= f.label :メールアドレス %></div>
    <div class="col"><%= f.text_field :email %></div>
    <div class="col"></div>
  </div>

    <%= f.submit "変更を保存する", class: "btn btn-primary" %>
    <%= link_to "退会する", exit_path, class: "btn btn-danger" %>

  <% end %>
</div>