<!-- ラジオボタンの中にドロップダウンメニュー、新規登録フォームがある場合の記述 -->
<!-- ラジオボタンの中に配送先の登録フォームがある -->
<div class="container">
	<div class="row">

	<h3>注文情報入力</h3><br>

		<%= form_with model: @order, local: true, url: confirm_new_order_path do |f| %>
		<span>支払い方法</span><br>
			<%= f.radio_button :payment_methods, 0 %>
			<%= f.label :payment_methods, "銀行振込", style: "display: inline-block"  %><br>
			<%= f.radio_button :payment_methods, 1 %>
			<%= f.label :payment_methods, "クレジットカード", style: "display: inline-block"  %><br>

		<span>お届け方法</span><br>
			<%= f.radio_button(:selected_address, "my address") %>
			<%= f.label :selected_address, "ご自身の住所", style:"display:inline-block" %><br>
			<%= current_customer.address %><br>

			<%= f.radio_button(:selected_address, "shipping_address") %>
			<%= f.label :登録先住所から選択 %><br>
			<%= f.collection_select :shipping, @addresses, :id, :address_detail %></br>

			<%= f.radio_button(:selected_address, "new address") %>
			<%= f.label :新しいお届け先 %></br>

			<%= f.label :郵便番号%>
			<%= f.text_field :postal_number %></br>

			<%= f.label :住所%>
			<%= f.text_field :address %></br>

			<%= f.label :宛名%>
			<%= f.text_field :name %>

			<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
			
		<% end %>
	</div>
</div>