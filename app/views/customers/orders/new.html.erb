<!-- ラジオボタンの中に配送先の登録フォームがある -->
<div class="container">
	<div class="row">

	<h3>注文情報入力</h3><br>

		<%= form_with model: @order, local: true, url: confirm_new_order_path, method: :get do |f| %>
		<span>支払い方法</span><br>
			<%= f.radio_button :payment_method, :銀行振込 %>
			<%= f.label :payment_method, "銀行振込", style: "display: inline-block"  %><br>
			<%= f.radio_button :payment_method, :クレジットカード %>
			<%= f.label :payment_method, "クレジットカード", style: "display: inline-block"  %><br>

		<span>お届け方法</span><br>
			<%= f.radio_button :address, current_customer.address %>
			<%= f.label :address, "ご自身の住所", style:"display:inline-block" %><br>
			<%= current_customer.address %><br>

			<%= f.radio_button :address, :登録済の住所から選択 %>
			<%= f.label :登録先住所から選択 %><br>
			<%= f.collection_select :shipping_addres_id, ShippingAddress.all, :id, :address, class: "col-lg-4" %><br>

			<%= f.radio_button :address, :新しいお届け先 %>
			<%= f.label :新しいお届け先 %>

			<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
			
		<% end %>
	</div>
</div>