<div class="container">
	<div class="row">
		<h3>注文情報確認</h3>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @order_items.each do |order| %>
					<tr>
						<td><%= attachment_image_tag :order.item, :image, format: 'jpeg', size: "100x80", fallback: "no_image.jpg" %><%= order_item.name %></td>
						<td><%= order.price %></td>
						<td><%= order.count %></td>
						<td><%= order.item * order.count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		支払い方法: <%= @order_items.orders.payment_methods %>
		お届け先: <%= @order_items.order.address %>
	</div>
</div>