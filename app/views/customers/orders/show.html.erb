<div class="container">
  <div class="row">
    <div class="col-lg-12">
			<main>
				<div class="row">
					<h5 class="title">注文履歴詳細</h5>
				</div>
				<div class="row">
					<div class="col-lg-5">
						注文情報
						<table class="table table-bordered">
							<tbody>
								<tr>
									<th class="table-active" style="width:30%">注文日</th>
									<td><%= @order.created_at.strftime("%Y-%m-%d") %></td>
								</tr>
								<tr>
									<th class="table-active">配送先</th>
									<td>
										<p><%=@order.postal_number %></p>
										<p><%= @order.address %></p>
										<p><%= @order.name %></p>
									</td>
								</tr>
								<tr>
									<th class="table-active">支払方法</th>
									<td><%= @order.payment_methods %></td>
								</tr>
								<tr>
									<th class="table-active">ステータス</th>
									<td><%= @order.order_status %></td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="col-lg-2">
					</div>
					<div class="col-lg-5">
						請求情報
						<table class="table table-bordered">
							<tbody>
								<tr>
									<th class="table-active" style="width:30%">商品合計</th>
									<td>
										<!-- もっとうまいやり方があれば… -->
											<%= @total_item_price.to_i.to_s(:delimited) %>
									</td>
								</tr>
								<tr>
									<th class="table-active">配送料</th>
									<td><%= @order.shipping_fee %></td>
								</tr>
								<tr>
									<th class="table-active">ご請求額</th>
									<td><%=  @order.payment %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-5">
						注文内容
						<table class="table table-bordered">
							<thead>
								<tr>
									<th class="table-active">商品</th>
									<th class="table-active">単価（税込）</th>
									<th class="table-active">個数</th>
									<th class="table-active">小計</th>
								</tr>
							</thead>
							<tbody>
								<% @order.order_items.each do |order|%>
								<tr>
                  <td><%= order.item.name %></td>
                  <td><%= (order.price).to_i.to_s(:delimited) %></td>
                  <td><%= order.count %></td>
                  <td><%= (order.price * order.count).to_i.to_s(:delimited) %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
				
			</main>
		</div>
	</div>		<!-- rowの閉じタグ -->
</div>		<!-- containerの閉じタグ -->
