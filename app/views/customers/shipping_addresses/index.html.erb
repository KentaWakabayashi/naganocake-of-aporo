<!-- エラーメッセージ表示-->
<% if @shipping_address.errors.any? %>
	<h3><%= @shipping_address.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @shipping_address.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->
<h2>配送先登録/一覧</h2>

<%= form_for (@shipping_address) do |f| %>
  <%= f.label :郵便番号%>
  <%= f.text_field :postal_number %></br>

  <%= f.label :住所%>
  <%= f.text_field :address %></br>

  <%= f.label :宛名%>
  <%= f.text_field :name %></br>

  <%= f.submit "登録する", class: "btn btn-success" %>

<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  	<% @shipping_addresses.each do |shipping_address| %>
  	<tr>
  	  <td><%= shipping_address.postal_number %></td>
  	  <td><%= shipping_address.address %></td>
  	  <td><%= shipping_address.name %></td>
  	  <td><%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-primary" %></td>
  	  <td><%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, class: "btn btn-danger" %></td>
  	</tr>
  	<% end %>
  </tbody>
</table>