<h1>top</h1>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<table>
				<thead>
					<tr>
						<th>ジャンル名</th>
					</tr>
				</thead>

				 <% @genres.each do |genre| %>
				<tbody>
					<tr>
						<td><%= link_to genre.name %></td>
					</tr>

				</tbody>
				<% end %>
			</table>
		</div>

		<div class="col-md-9">
			<!-- このmain-visualにassets/imagesの中のimages1.jpgを入れたい -->
			<div class="main-visual">
				<div class="main-visual-text">
					ログインすると全ての機能が使用できます。
				</div>
			</div>

<!-- 画像表示がまだpaginationもまだ -->
			<h4>オススメ商品</h4>
			<div class="flex">
				<div>
					<% @items.each do |item| %>
						<table>
							<tr>
								<td><%= item.image %></td>
							</tr>
							<tr>
								<td><%= item.name %></td>
							</tr>
							<tr>
								<td>¥<%= item.price %></td>
							</tr>
						</table>
					<% end %>
				</div>
				<%= paginate @items %>
			</div>
		</div>
	</div>
</div>