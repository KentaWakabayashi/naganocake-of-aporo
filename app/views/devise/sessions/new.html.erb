<!--==========⭐カスタマーログイン⭐==========-->
<div class="container">
  <h4 class="col-lg-6 text-center">会員の方はこちらからログイン</h4><br><br>

  <div class="row">
    <div class="col-lg-12 text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "col-lg-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-4" %>
        </div><br>

        <div class="field">
          <%= f.label :password, "パスワード", class: "col-lg-2"%>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-4" %>
        </div><br><br>

        <%# if devise_mapping.rememberable? %>
          <%# <div class="field"> %>
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <%# </div> %>
        <%# end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary"%>
        </div>
      <% end %><br><br><br><br>
    

    <!--新規登録画面へ遷移-->
    <h4 class="col-lg-6 text-center">登録がお済みでない方</h4><br><br>
    <%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。
    </div>
  </div>
</div>


