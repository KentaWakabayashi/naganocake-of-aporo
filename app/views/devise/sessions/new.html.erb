<!--==========⭐カスタマーログイン⭐==========-->
<div class="container">
  <div class="col-lg-8 mx-auto">
    <h4 class="login" style="margin-top:80px;">会員の方はこちらからログイン</h4>

    <div class="row">
      <div class="col-lg-12">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス", class: "col-lg-4", style: "text-indent:2em;" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-6" %>
          </div><br>

          <div class="field">
            <%= f.label :password, "パスワード", class: "col-lg-4", style: "text-indent:2em;" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-6"%>
          </div><br><br>

          <%# if devise_mapping.rememberable? %>
            <%# <div class="field"> %>
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%# </div> %>
          <%# end %>

          <div class="actions", style="text-indent:12em;">
            <%= f.submit "ログイン", class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <!--新規登録画面へ遷移-->
        <h4 class="login">登録がお済みでない方</h4>
        <div style="text-indent:3em;">
          <%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。
        </div>
      </div>
    </div>
  </div>
</div>
