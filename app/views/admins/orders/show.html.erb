<div class="container">
  <div class="row">
    <div class="col-lg-12">
			<h1 class="title">注文履歴詳細</h1>
			購入者: <%= link_to @order.customer.last_name + @order.customer.first_name, admins_customer_path(@order.customer) %><br>
			配送先: 〒<%= @order.postal_number + @order.address + @order.name %><br>

			支払い方法: <%= @order.payment_methods %><br>

			注文ステータス: <%= form_with model: @order, local: true, url: order_admins_order_path do |f| %>
							<%= f.select :order_status, Order.order_statuses.keys %>
							<%= f.submit '更新' %>
						<% end %><br>

			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_items.each do |order_item| %>
						<tr>
							<td><%= order_item.item.name %></td>
							<td><%= order_item.item.price.to_i.to_s(:delimited) %></td>
							<td><%= order_item.count %></td>
							<td><%= (order_item.item.price * order_item.count).to_i.to_s(:delimited) %></td>
							<td>
								<%= form_with model: order_item, local: true, url:admins_order_item_path(order_item) do |f| %>
									<%= f.select :make_status, OrderItem.make_statuses.keys %>
									<%= f.submit '更新' %>
								<% end %><br>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
    </div>
  </div>
</div>
