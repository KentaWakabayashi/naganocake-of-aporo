<h1><%= @customer.last_name + @customer.first_name %>の会員情報編集</h1>

会員ID: <%= @customer.id %>
<%= form_for @customer do |f|%>
	<%= f.label :氏名%>
	<%= f.text_field :last_name %>
	<%= f.text_field :first_name %></br>

	<%= f.label :フリガナ %>
	<%= f.text_field :last_name %>
	<%= f.text_field :first_name %></br>

	<%= f.label :郵便番号 %>
	<%= f.text_field :postal_number %></br>
	
	<%= f.label :住所 %>
	<%= f.text_field :address %></br>
	
	<%= f.label :電話番号 %>
	<%= f.text_field :phone_number %></br>

	<%= f.label :メールアドレス %>
	<%= f.text_field :email %></br>

	会員ステータス</br>

	<%= f.submit "変更を保存する", class: "btn btn-primary" %>
<% end %>