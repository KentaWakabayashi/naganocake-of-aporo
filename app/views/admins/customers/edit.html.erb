<h1><%= @customer.last_name + @customer.first_name %>の会員情報編集</h1>

会員ID: <%= @customer.id %>
<%= form_with model: [:admins,@customer], local: true do |f| %>
	<%= f.label :氏名%>
	<%= f.text_field :last_name %>
	<%= f.text_field :first_name %></br>

	<%= f.label :フリガナ %>
	<%= f.text_field :last_name_kana %>
	<%= f.text_field :first_name_kana %></br>

	<%= f.label :郵便番号 %>
	<%= f.text_field :postal_number %></br>

	<%= f.label :住所 %>
	<%= f.text_field :address %></br>

	<%= f.label :電話番号 %>
	<%= f.text_field :phone_number %></br>

	<%= f.label :メールアドレス %>
	<%= f.text_field :email %></br>

	<%= f.label :会員ステータス%>
	<%= f.radio_button :is_delete, :true %>
	<%= f.label :is_delete, "有効", {value: :true} %>

	<%= f.radio_button :is_delete, :false %>
	<%= f.label :is_delete, "退会済み", {value: :false} %></br>

	<%= f.submit "変更を保存する", class: "btn btn-primary" %>
<% end %>