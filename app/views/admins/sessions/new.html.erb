<!--==========⭐管理者ログイン⭐==========-->
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="title">管理者ログイン</h3><br><br>
      <div class="row">
        <div class="col-lg-12 text-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, "メールアドレス", class: "col-lg-2" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-4" %>
            </div><br>

            <div class="field">
              <%= f.label :password, "パスワード", class: "col-lg-2"%>
              <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-4" %>
            </div><br><br>

            <%# if devise_mapping.rememberable? %>
              <%# <div class="field"> %>
                <%#= f.check_box :remember_me %>
                <%#= f.label :remember_me %>
              <%# </div> %>
            <%# end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
      <%#= render "devise/shared/links" %>
	</div>
</div>
